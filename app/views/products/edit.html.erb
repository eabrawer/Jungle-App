<h1>Edit Products</h1>

	<%= form_for @product do |f| %>
		<%= f.label "title" %><br />
		<%= f.text_field "title" %><br />
	<br />
		<%= f.label "description" %><br />
		<%= f.text_area "description" %><br />	
	<br />
		<%= f.label "price" %><br />
		<%= f.number_field "price" %><br />	
	<br />
		<%= f.submit "save" %>

	<% end %>

<br />

<%= link_to "Back To Products", products_url %>
