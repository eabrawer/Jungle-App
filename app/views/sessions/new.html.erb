<!-- we are using a form_tag and not a form_for here. This is because there is no model associated with a session. -->

<h1> Log In </h1>
<%= form_tag sessions_path do %>
    <%= label_tag :email %><br/>
    <%= text_field_tag :email, params[:email] %>
    <%= label_tag :password %><br/>
    <%= password_field_tag :password %>
    <%= submit_tag "Log in" %>
 <% end %>